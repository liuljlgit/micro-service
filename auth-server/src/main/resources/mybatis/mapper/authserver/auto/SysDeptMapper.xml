    <!--查询总数-->
    <select id="getSysDeptCount" resultType="java.lang.Long">
        select count(*) from sys_dept
        <where>
            <include refid="where_sql" />
        </where>
    </select>

    <!--查询和分页查询,区别在于page和pageSize是否为空-->
    <select id="getSysDeptList" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from sys_dept
        <where>
            <include refid="where_sql" />
        </where>
        <if test="page!=null and pageSize!=null and page!=-1" >
            limit #{index},#{pageSize}
